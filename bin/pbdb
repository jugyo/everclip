#!/usr/bin/env ruby
# -*- coding: utf-8 -*-

$:.unshift(File.dirname(__FILE__) + "/../lib")

require 'rubygems'
require 'pbdb'

# TODO: fix to show help

if /^(start|stop|restart|open|config)$/ =~ ARGV[0]
  mode = $1
  PBDB.init(ARGV[1])
  PBDB.send(mode)
else
  puts "Usage: pbdb start|stop|restart|open"
end
