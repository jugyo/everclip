#!/usr/bin/env ruby
# -*- coding: utf-8 -*-

$:.unshift(File.dirname(__FILE__) + "/../lib")

require 'rubygems'
require 'pbdb'

# TODO: handle options => 'start', 'stop', 'restart'

option = ARGV.shift
if /^(start|stop|restart)$/ =~ option
  PBDB.send(option.to_sym)
else
  puts "Usage: pbdb start|stop|restart"
end
