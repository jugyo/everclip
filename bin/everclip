#!/usr/bin/env ruby
# -*- coding: utf-8 -*-

$:.unshift(File.dirname(__FILE__) + "/../lib")

require 'rubygems'
require 'everclip'

# TODO: fix to show help

if /^(start|stop|open|config)$/ =~ ARGV[0]
  mode = $1
  EverClip.init(ARGV[1])
  EverClip.send(mode)
else
  puts "Usage: everclip start|stop|restart|open"
end
